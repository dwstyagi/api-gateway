<%# Consumer Usage - Screen 3: Stunning Redesign %>
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 relative overflow-hidden">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
  </div>

  <%= render 'consumer/shared/header', active: 'usage' %>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Usage & Rate Limits ðŸ“Š</h2>
      <p class="text-gray-600">Monitor your API usage and stay within limits</p>
    </div>

    <%# Rate Limit Status Card %>
    <div class="backdrop-blur-xl bg-white/60 rounded-3xl p-8 shadow-xl border border-white/20 mb-8">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h3 class="text-2xl font-bold text-gray-900">Current Usage</h3>
          <p class="text-sm text-gray-600 mt-1">Your API consumption status</p>
        </div>
        <% 
          rate_color = @rate_limit_status[:percentage] > 90 ? 'red' : @rate_limit_status[:percentage] > 70 ? 'orange' : 'purple'
        %>
        <div class="text-right">
          <div class="text-4xl font-bold bg-gradient-to-r from-<%= rate_color %>-500 to-<%= rate_color %>-600 bg-clip-text text-transparent">
            <%= @rate_limit_status[:percentage] %>%
          </div>
          <div class="text-sm text-gray-500">of <%= @tier_info[:display_name] %> limit</div>
        </div>
      </div>

      <div class="space-y-4">
        <div class="relative">
          <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden shadow-inner">
            <div class="h-full rounded-full bg-gradient-to-r from-<%= rate_color %>-500 to-<%= rate_color %>-600 transition-all duration-500 shadow-lg" style="width: <%= @rate_limit_status[:percentage] %>%"></div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
          <div class="p-4 bg-gradient-to-br from-blue-50 to-blue-100/50 rounded-2xl">
            <div class="text-xs font-semibold text-blue-700 uppercase tracking-wider mb-1">Used</div>
            <div class="text-2xl font-bold text-blue-900"><%= number_with_delimiter(@rate_limit_status[:used]) %></div>
          </div>
          <div class="p-4 bg-gradient-to-br from-purple-50 to-purple-100/50 rounded-2xl">
            <div class="text-xs font-semibold text-purple-700 uppercase tracking-wider mb-1">Limit</div>
            <div class="text-2xl font-bold text-purple-900"><%= number_with_delimiter(@rate_limit_status[:limit]) %></div>
          </div>
          <div class="p-4 bg-gradient-to-br from-green-50 to-green-100/50 rounded-2xl">
            <div class="text-xs font-semibold text-green-700 uppercase tracking-wider mb-1">Remaining</div>
            <div class="text-2xl font-bold text-green-900"><%= number_with_delimiter(@rate_limit_status[:limit] - @rate_limit_status[:used]) %></div>
          </div>
        </div>

        <% if @rate_limit_status[:reset_at] %>
          <div class="mt-4 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-2xl">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Next reset in:</span>
              <span class="text-lg font-bold text-indigo-600">
                <%= distance_of_time_in_words(Time.current, @rate_limit_status[:reset_at]) %>
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <% if @tier_info[:can_upgrade] %>
        <div class="mt-6 p-4 bg-gradient-to-r from-purple-100 to-pink-100 rounded-2xl border-2 border-purple-200/50">
          <div class="flex items-center justify-between">
            <div>
              <div class="font-bold text-gray-900">Need more capacity?</div>
              <div class="text-sm text-gray-600">Upgrade to get higher rate limits</div>
            </div>
            <a href="<%= consumer_upgrade_path %>" class="px-6 py-3 rounded-xl bg-gradient-to-r from-purple-500 to-pink-600 text-white font-semibold shadow-lg hover:shadow-xl transition-all hover:scale-105">
              Upgrade Now â†’
            </a>
          </div>
        </div>
      <% end %>
    </div>

    <%# Top Endpoints %>
    <div class="backdrop-blur-xl bg-white/60 rounded-3xl p-8 shadow-xl border border-white/20">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Top Endpoints</h3>
      <% if @top_endpoints.present? %>
        <div class="space-y-4">
          <% @top_endpoints.each_with_index do |endpoint, index| %>
            <div class="group hover:bg-white/50 p-4 rounded-2xl transition-all">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-indigo-<%= 500 + (index * 100) %> to-purple-<%= 500 + (index * 100) %> flex items-center justify-center text-white font-bold text-sm shadow-md">
                    #<%= index + 1 %>
                  </div>
                  <code class="text-sm font-mono text-gray-900 font-semibold"><%= endpoint[:endpoint] %></code>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-gray-900"><%= number_with_delimiter(endpoint[:count]) %></div>
                  <div class="text-xs text-gray-500">requests</div>
                </div>
              </div>
              <div class="relative">
                <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                  <div class="h-full rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 transition-all duration-500" style="width: <%= endpoint[:percentage] %>%"></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-gray-500">No endpoint data available yet</div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  @keyframes blob { 0%, 100% { transform: translate(0, 0) scale(1); } 25% { transform: translate(20px, -50px) scale(1.1); } 50% { transform: translate(-20px, 20px) scale(0.9); } 75% { transform: translate(50px, 50px) scale(1.05); } }
  .animate-blob { animation: blob 7s infinite; }
  .animation-delay-2000 { animation-delay: 2s; }
  .animation-delay-4000 { animation-delay: 4s; }
</style>
