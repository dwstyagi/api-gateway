<%# Consumer Errors - Screen 4: Stunning Redesign %>
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 relative overflow-hidden">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
  </div>

  <%= render 'consumer/shared/header', active: 'errors' %>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Errors & Blocks ðŸš¨</h2>
        <p class="text-gray-600">Diagnose issues with actionable fix suggestions</p>
      </div>
      <div class="flex items-center space-x-2 bg-white/50 backdrop-blur-sm rounded-xl p-1 shadow-inner">
        <a href="?filter=all" class="px-4 py-2 rounded-lg <%= @error_type == 'all' ? 'bg-gradient-to-r from-indigo-500 to-purple-600 text-white shadow-md' : 'text-gray-600 hover:bg-white/80' %> text-sm font-medium transition-all">
          All
        </a>
        <a href="?filter=429" class="px-4 py-2 rounded-lg <%= @error_type == '429' ? 'bg-gradient-to-r from-yellow-500 to-orange-600 text-white shadow-md' : 'text-gray-600 hover:bg-white/80' %> text-sm font-medium transition-all">
          429
        </a>
        <a href="?filter=401" class="px-4 py-2 rounded-lg <%= @error_type == '401' ? 'bg-gradient-to-r from-red-500 to-red-600 text-white shadow-md' : 'text-gray-600 hover:bg-white/80' %> text-sm font-medium transition-all">
          401
        </a>
        <a href="?filter=403" class="px-4 py-2 rounded-lg <%= @error_type == '403' ? 'bg-gradient-to-r from-orange-500 to-red-600 text-white shadow-md' : 'text-gray-600 hover:bg-white/80' %> text-sm font-medium transition-all">
          403
        </a>
        <a href="?filter=5xx" class="px-4 py-2 rounded-lg <%= @error_type == '5xx' ? 'bg-gradient-to-r from-red-600 to-red-700 text-white shadow-md' : 'text-gray-600 hover:bg-white/80' %> text-sm font-medium transition-all">
          5xx
        </a>
      </div>
    </div>

    <% if @errors.present? %>
      <div class="space-y-4">
        <% @errors.each do |error_data| %>
          <% 
            error = error_data[:error]
            status_code = error_data[:status_code]
            suggestion = error_data[:suggestion]
            
            status_colors = {
              '429' => { bg: 'yellow-100', text: 'yellow-700', ring: 'yellow-500', gradient: 'from-yellow-500 to-orange-600' },
              '401' => { bg: 'red-100', text: 'red-700', ring: 'red-500', gradient: 'from-red-500 to-red-600' },
              '403' => { bg: 'orange-100', text: 'orange-700', ring: 'orange-500', gradient: 'from-orange-500 to-red-600' },
              '5xx' => { bg: 'red-100', text: 'red-800', ring: 'red-600', gradient: 'from-red-600 to-red-700' }
            }
            
            colors = status_code.to_s.start_with?('5') ? status_colors['5xx'] : (status_colors[status_code.to_s] || status_colors['429'])
          %>
          
          <div class="backdrop-blur-xl bg-white/60 rounded-3xl p-6 shadow-xl border border-white/20 hover:shadow-2xl transition-all">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-start space-x-4 flex-1">
                <div class="p-3 rounded-2xl bg-gradient-to-br <%= colors[:gradient] %> shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                </div>
                
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <code class="text-lg font-mono font-semibold text-gray-900">
                      <%= error.metadata&.dig('endpoint') || 'N/A' %>
                    </code>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-<%= colors[:bg] %> text-<%= colors[:text] %> ring-2 ring-<%= colors[:ring] %>/20 shadow-sm">
                      <%= status_code %>
                    </span>
                  </div>
                  
                  <div class="text-sm text-gray-600 mb-3">
                    <span class="font-medium"><%= time_ago_in_words(error.timestamp) %> ago</span>
                    <span class="mx-2">â€¢</span>
                    <span><%= error.metadata&.dig('method') || 'GET' %></span>
                  </div>

                  <div class="p-4 bg-gradient-to-br from-gray-50 to-gray-100/50 rounded-2xl">
                    <div class="flex items-start space-x-3">
                      <div class="p-2 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 shadow-md">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <div class="font-semibold text-gray-900 mb-1"><%= suggestion[:reason] %></div>
                        <div class="text-sm text-gray-700">â†’ <%= suggestion[:suggestion] %></div>
                        <% if suggestion[:action_url] %>
                          <a href="<%= suggestion[:action_url] %>" class="inline-flex items-center space-x-1 mt-2 px-3 py-1.5 rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 text-white text-sm font-medium shadow-md hover:shadow-lg transition-all hover:scale-105">
                            <span><%= suggestion[:action]&.titleize || 'Take Action' %></span>
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                          </a>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="backdrop-blur-xl bg-white/60 rounded-3xl p-16 shadow-xl border border-white/20 text-center">
        <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-gradient-to-br from-green-100 to-emerald-100 mb-6">
          <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">No Errors Found! ðŸŽ‰</h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
          Your API is running smoothly with no errors in this category
        </p>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes blob { 0%, 100% { transform: translate(0, 0) scale(1); } 25% { transform: translate(20px, -50px) scale(1.1); } 50% { transform: translate(-20px, 20px) scale(0.9); } 75% { transform: translate(50px, 50px) scale(1.05); } }
  .animate-blob { animation: blob 7s infinite; }
  .animation-delay-2000 { animation-delay: 2s; }
  .animation-delay-4000 { animation-delay: 4s; }
</style>
