<%# Consumer API Keys - Screen 2: Stunning Redesign %>
<%# Purpose: Self-service API key management (MOST IMPORTANT SCREEN) %>

<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 relative overflow-hidden">
  <%# Animated background elements %>
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-indigo-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
  </div>

  <%= render 'consumer/shared/header', active: 'api_keys' %>

  <%# Main Content %>
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Page Header %>
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-2">
            API Keys üîë
          </h2>
          <p class="text-gray-600">Manage your API authentication keys</p>
        </div>
        <a href="<%= new_consumer_api_key_path %>" class="group px-6 py-3 rounded-2xl bg-gradient-to-r from-indigo-500 via-purple-600 to-pink-600 text-white font-semibold shadow-xl hover:shadow-2xl transition-all hover:scale-105">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Create New Key</span>
          </div>
        </a>
      </div>
    </div>

    <%# API Keys Grid %>
    <% if @api_keys.present? %>
      <div class="grid grid-cols-1 gap-6">
        <% @api_keys.each do |api_key| %>
          <%
            is_prod = api_key.prefix.include?('live')
            status_colors = {
              'active' => { bg: 'green-100', text: 'green-700', ring: 'green-500', gradient_from: 'green-500', gradient_to: 'emerald-600' },
              'deprecated' => { bg: 'yellow-100', text: 'yellow-700', ring: 'yellow-500', gradient_from: 'yellow-500', gradient_to: 'orange-600' },
              'revoked' => { bg: 'red-100', text: 'red-700', ring: 'red-500', gradient_from: 'red-500', gradient_to: 'red-600' }
            }
            colors = status_colors[api_key.status] || status_colors['active']
          %>

          <div class="group backdrop-blur-xl bg-white/70 rounded-3xl shadow-xl border border-white/20 hover:shadow-2xl hover:scale-[1.02] transition-all duration-300">
            <div class="p-6">
              <%# Card Header %>
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center space-x-4">
                  <%# Icon %>
                  <div class="p-4 rounded-2xl bg-gradient-to-br from-<%= colors[:gradient_from] %> to-<%= colors[:gradient_to] %> shadow-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                    </svg>
                  </div>

                  <%# Key Name & Prefix %>
                  <div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-1"><%= api_key.name %></h3>
                    <code class="text-sm font-mono text-gray-500 bg-gray-100 px-3 py-1 rounded-lg">
                      <%= api_key.prefix %>‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢
                    </code>
                  </div>
                </div>

                <%# Status & Environment Badges %>
                <div class="flex flex-col items-end space-y-2">
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-<%= colors[:bg] %> text-<%= colors[:text] %> ring-2 ring-<%= colors[:ring] %>/20 shadow-sm">
                    <div class="w-2 h-2 rounded-full bg-<%= colors[:gradient_from] %> mr-2 <%= api_key.status == 'active' ? 'animate-pulse' : '' %>"></div>
                    <%= api_key.status.titleize %>
                  </span>
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold <%= is_prod ? 'bg-green-100 text-green-700 ring-2 ring-green-500/20' : 'bg-blue-100 text-blue-700 ring-2 ring-blue-500/20' %>">
                    <%= is_prod ? 'üü¢ Production' : 'üîµ Test' %>
                  </span>
                </div>
              </div>

              <%# Key Details Grid %>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 p-4 bg-gradient-to-br from-gray-50 to-gray-100/50 rounded-2xl">
                <div>
                  <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Scopes</div>
                  <div class="flex items-center space-x-1">
                    <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-semibold bg-purple-100 text-purple-700 shadow-sm">
                      <%= api_key.scopes.size %> permissions
                    </span>
                    <button onclick="toggleScopes('<%= api_key.id %>')" class="text-xs text-indigo-600 hover:text-indigo-800 font-medium">
                      Show ‚Üí
                    </button>
                  </div>
                  <div id="scopes-<%= api_key.id %>" class="hidden mt-2 flex flex-wrap gap-1">
                    <% api_key.scopes.each do |scope| %>
                      <span class="text-xs px-2 py-1 bg-white rounded-md text-gray-700 font-mono shadow-sm">
                        <%= scope %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div>
                  <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Created</div>
                  <div class="text-sm font-semibold text-gray-900">
                    <%= api_key.created_at.strftime('%b %d, %Y') %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= time_ago_in_words(api_key.created_at) %> ago
                  </div>
                </div>

                <div>
                  <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Last Used</div>
                  <% if api_key.last_used_at %>
                    <div class="text-sm font-semibold text-gray-900">
                      <%= api_key.last_used_at.strftime('%b %d, %Y') %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= time_ago_in_words(api_key.last_used_at) %> ago
                    </div>
                  <% else %>
                    <div class="text-sm font-semibold text-gray-500">Never</div>
                    <div class="text-xs text-gray-400">Not yet used</div>
                  <% end %>
                </div>
              </div>

              <%# Actions %>
              <div class="flex items-center justify-end space-x-3">
                <% if api_key.status == 'active' %>
                  <%= button_to rotate_consumer_api_key_path(api_key), method: :post, class: "px-4 py-2 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600 text-white text-sm font-medium shadow-lg hover:shadow-xl transition-all hover:scale-105" do %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                      <span>Rotate</span>
                    </div>
                  <% end %>

                  <%= button_to revoke_consumer_api_key_path(api_key), method: :post, data: { confirm: "Are you sure? This will immediately disable the API key." }, class: "px-4 py-2 rounded-xl bg-gradient-to-r from-orange-500 to-red-600 text-white text-sm font-medium shadow-lg hover:shadow-xl transition-all hover:scale-105" do %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                      </svg>
                      <span>Revoke</span>
                    </div>
                  <% end %>
                <% elsif api_key.status == 'deprecated' %>
                  <div class="text-sm text-yellow-700 bg-yellow-100 px-4 py-2 rounded-xl font-medium">
                    ‚ö†Ô∏è This key is deprecated. Please use the new key.
                  </div>
                  <%= button_to revoke_consumer_api_key_path(api_key), method: :post, data: { confirm: "Are you sure?" }, class: "px-4 py-2 rounded-xl bg-gradient-to-r from-orange-500 to-red-600 text-white text-sm font-medium shadow-lg hover:shadow-xl transition-all hover:scale-105" do %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 15.636 5.636m12.728 12.728L5.636 5.636" />
                      </svg>
                      <span>Revoke</span>
                    </div>
                  <% end %>
                <% else %>
                  <%= button_to consumer_api_key_path(api_key), method: :delete, data: { confirm: "Are you sure you want to delete this key permanently?" }, class: "px-4 py-2 rounded-xl bg-gradient-to-r from-gray-500 to-gray-600 text-white text-sm font-medium shadow-lg hover:shadow-xl transition-all hover:scale-105" do %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      <span>Delete</span>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%# Empty State %>
      <div class="backdrop-blur-xl bg-white/60 rounded-3xl p-16 shadow-xl border border-white/20 text-center">
        <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 mb-6">
          <svg class="w-12 h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">No API Keys Yet</h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
          Create your first API key to start making authenticated requests to our API
        </p>
        <a href="<%= new_consumer_api_key_path %>" class="inline-flex items-center space-x-2 px-8 py-4 rounded-2xl bg-gradient-to-r from-indigo-500 via-purple-600 to-pink-600 text-white font-semibold shadow-xl hover:shadow-2xl transition-all hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>Create Your First API Key</span>
        </a>
      </div>
    <% end %>

    <%# Info Card %>
    <div class="mt-8 backdrop-blur-xl bg-gradient-to-br from-blue-50/50 to-purple-50/50 rounded-3xl p-6 shadow-lg border border-blue-200/30">
      <div class="flex items-start space-x-4">
        <div class="p-3 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 shadow-lg flex-shrink-0">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h4 class="font-bold text-gray-900 mb-2">üí° API Key Best Practices</h4>
          <ul class="text-sm text-gray-700 space-y-2">
            <li class="flex items-start space-x-2">
              <span class="text-blue-600">‚Ä¢</span>
              <span><strong>Store securely:</strong> Never commit API keys to version control</span>
            </li>
            <li class="flex items-start space-x-2">
              <span class="text-blue-600">‚Ä¢</span>
              <span><strong>Rotate regularly:</strong> Rotate keys every 90 days or when team members leave</span>
            </li>
            <li class="flex items-start space-x-2">
              <span class="text-blue-600">‚Ä¢</span>
              <span><strong>Use test keys:</strong> Use test environment keys for development and testing</span>
            </li>
            <li class="flex items-start space-x-2">
              <span class="text-blue-600">‚Ä¢</span>
              <span><strong>Minimal scopes:</strong> Grant only the permissions your application needs</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<%# JavaScript for scope toggling %>
<script>
  function toggleScopes(keyId) {
    const scopesDiv = document.getElementById('scopes-' + keyId);
    if (scopesDiv.classList.contains('hidden')) {
      scopesDiv.classList.remove('hidden');
    } else {
      scopesDiv.classList.add('hidden');
    }
  }
</script>

<%# Add custom animations %>
<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -50px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(50px, 50px) scale(1.05); }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
