<%# Consumer API Keys - Screen 2: Self-service Key Management %>
<%# Purpose: MOST IMPORTANT SCREEN - This decides if platform feels Stripe-level or college-project %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
  <%= render 'consumer/shared/header', active: 'api_keys' %>

  <%# Main Content %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Header with Create Button %>
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">API Keys</h1>
        <p class="text-gray-600 mt-1">Manage your API keys for authentication</p>
      </div>
      <a href="<%= new_consumer_api_key_path %>" class="btn btn-primary gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create New Key
      </a>
    </div>

    <%# API Keys Table %>
    <div class="card bg-white shadow-xl">
      <div class="card-body">
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Environment</th>
                <th>Scopes</th>
                <th>Status</th>
                <th>Last Used</th>
                <th class="text-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @api_keys.any? %>
                <% @api_keys.each do |key| %>
                  <tr class="hover">
                    <%# Name %>
                    <td>
                      <div class="flex flex-col">
                        <span class="font-semibold text-gray-900"><%= key.name %></span>
                        <span class="text-xs font-mono text-gray-500"><%= key.prefix %>••••••••</span>
                      </div>
                    </td>

                    <%# Environment %>
                    <td>
                      <span class="badge <%= key.prefix.include?('test') ? 'badge-info' : 'badge-success' %> gap-2">
                        <% if key.prefix.include?('test') %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                          </svg>
                          Test
                        <% else %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                          </svg>
                          Production
                        <% end %>
                      </span>
                    </td>

                    <%# Scopes %>
                    <td>
                      <% if key.scopes.any? %>
                        <div class="dropdown dropdown-hover">
                          <label tabindex="0" class="badge badge-outline gap-2 cursor-pointer">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            +<%= key.scopes.size %>
                          </label>
                          <div tabindex="0" class="dropdown-content z-[1] card card-compact w-64 p-2 shadow bg-base-100 border border-gray-200">
                            <div class="card-body">
                              <h3 class="font-bold text-sm mb-2">Scopes:</h3>
                              <div class="flex flex-wrap gap-1">
                                <% key.scopes.each do |scope| %>
                                  <span class="badge badge-sm badge-ghost"><%= scope %></span>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% else %>
                        <span class="badge badge-ghost">No scopes</span>
                      <% end %>
                    </td>

                    <%# Status %>
                    <td>
                      <% case key.status %>
                      <% when 'active' %>
                        <span class="badge badge-success gap-2">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                          Active
                        </span>
                      <% when 'deprecated' %>
                        <span class="badge badge-warning gap-2">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                          </svg>
                          Deprecated
                        </span>
                      <% when 'revoked' %>
                        <span class="badge badge-error gap-2">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                          </svg>
                          Revoked
                        </span>
                      <% end %>
                    </td>

                    <%# Last Used %>
                    <td>
                      <% if key.last_used_at %>
                        <span class="text-sm text-gray-600"><%= time_ago_in_words(key.last_used_at) %> ago</span>
                      <% else %>
                        <span class="text-sm text-gray-400">Never</span>
                      <% end %>
                    </td>

                    <%# Actions %>
                    <td class="text-right">
                      <div class="flex items-center justify-end gap-2">
                        <% if key.status == 'active' %>
                          <%# Rotate Button %>
                          <%= button_to rotate_consumer_api_key_path(key), method: :post, class: "btn btn-sm btn-ghost gap-2 tooltip", data: { "tip": "Generate new key, deprecate old" } do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            Rotate
                          <% end %>

                          <%# Revoke Button %>
                          <%= button_to revoke_consumer_api_key_path(key), method: :post, class: "btn btn-sm btn-error btn-outline gap-2", data: { turbo_confirm: "Are you sure? This API key will stop working immediately." } do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                            </svg>
                            Revoke
                          <% end %>

                        <% elsif key.status == 'revoked' %>
                          <%# Delete Button %>
                          <%= button_to consumer_api_key_path(key), method: :delete, class: "btn btn-sm btn-ghost gap-2", data: { turbo_confirm: "Permanently delete this API key?" } do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            Delete
                          <% end %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="text-center py-12">
                    <div class="flex flex-col items-center">
                      <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                      </svg>
                      <h3 class="text-lg font-semibold text-gray-900 mb-2">No API Keys Yet</h3>
                      <p class="text-gray-600 mb-4">Create your first API key to start using the API</p>
                      <a href="<%= new_consumer_api_key_path %>" class="btn btn-primary gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Create Your First Key
                      </a>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%# Security Best Practices %>
    <div class="alert alert-info shadow-lg mt-8">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <div>
        <h3 class="font-bold">Security Best Practices</h3>
        <div class="text-xs mt-1">
          <ul class="list-disc list-inside space-y-1">
            <li>Never commit API keys to version control</li>
            <li>Store keys in environment variables or secret managers</li>
            <li>Rotate keys if you suspect they've been compromised</li>
            <li>Use test keys for development, production keys only in production</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
