<% content_for :page_title, 'Rate Limit Policies - MOST DANGEROUS' %>

<div class="max-w-7xl mx-auto">
  <%# DANGER WARNING %>
  <div class="glass-card rounded-2xl shadow-2xl mb-8 border-2 border-red-300 smooth-hover overflow-hidden">
    <div class="bg-gradient-to-r from-red-500 via-pink-500 to-rose-500 p-6">
      <div class="flex items-center">
        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-3 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-2xl text-white">MOST DANGEROUS SCREEN</h3>
          <p class="text-white/90 text-sm mt-1">
            Changing rate limits affects ALL users immediately. Bad configurations can block legitimate traffic or allow abuse.
          </p>
        </div>
      </div>
    </div>
  </div>

  <%# Header with Create Button %>
  <div class="glass-card rounded-2xl shadow-xl mb-6 p-6 smooth-hover">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl p-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Rate Limit Policies</h1>
          <p class="text-sm text-gray-600 mt-1">Control request rates by tier and API</p>
        </div>
      </div>
      <%= link_to new_admin_rate_limit_policy_path, class: 'bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold px-6 py-3 rounded-xl shadow-lg transition-all duration-300 smooth-hover flex items-center space-x-2' do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <span>Create Policy</span>
      <% end %>
    </div>
  </div>

  <%# Policies Cards %>
  <div class="glass-card rounded-2xl shadow-2xl smooth-hover overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="bg-white/20 backdrop-blur-sm rounded-xl p-2">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">Rate Limit Policies</h2>
        </div>
        <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-xl border border-white/30">
          <span class="text-white font-bold text-lg"><%= @policies.count %> Policies</span>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @policies.any? %>
        <div class="space-y-3">
          <% @policies.each do |policy| %>
            <div class="bg-white border border-gray-200 rounded-xl p-5 hover:shadow-lg transition-all duration-300 smooth-hover">
              <div class="grid grid-cols-12 gap-4 items-center">
                <%# API Column %>
                <div class="col-span-2">
                  <div class="font-bold text-gray-900 text-lg">
                    <%= policy.api_definition&.name || 'All APIs' %>
                  </div>
                </div>

                <%# Tier Column %>
                <div class="col-span-1">
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold bg-gray-100 text-gray-700">
                    <%= policy.tier&.upcase || 'ALL' %>
                  </span>
                </div>

                <%# Strategy Column %>
                <div class="col-span-2">
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold <%= strategy_badge_class(policy.strategy) %>">
                    <%= policy.strategy.humanize %>
                  </span>
                </div>

                <%# Capacity Column %>
                <div class="col-span-2">
                  <div class="font-mono text-sm bg-gray-100 px-3 py-1.5 rounded-lg text-gray-700">
                    <%= number_with_delimiter(policy.capacity) %>
                  </div>
                </div>

                <%# Rate/Window Column %>
                <div class="col-span-2">
                  <div class="font-mono text-sm bg-blue-50 px-3 py-1.5 rounded-lg text-blue-700">
                    <% if policy.refill_rate %>
                      <%= policy.refill_rate %>/sec
                    <% elsif policy.window_seconds %>
                      <%= policy.window_seconds / 60 %>min window
                    <% else %>
                      -
                    <% end %>
                  </div>
                </div>

                <%# Failure Mode Column %>
                <div class="col-span-1">
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold <%= policy.redis_failure_mode == 'allow' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                    <%= policy.redis_failure_mode&.upcase || 'DENY' %>
                  </span>
                </div>

                <%# Actions Column %>
                <div class="col-span-2">
                  <div class="flex gap-2 justify-end">
                    <%# Edit Button %>
                    <%= link_to edit_admin_rate_limit_policy_path(policy), class: 'bg-gray-100 hover:bg-gray-200 text-gray-700 p-2 rounded-lg transition-all duration-300' do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>

                    <%# Delete Button %>
                    <%= button_to admin_rate_limit_policy_path(policy),
                        method: :delete,
                        class: 'bg-red-100 hover:bg-red-200 text-red-600 p-2 rounded-lg transition-all duration-300',
                        data: { turbo_confirm: "Delete policy for #{policy.tier&.upcase || 'ALL'} tier on #{policy.api_definition&.name || 'All APIs'}? This will affect all users in this tier immediately. This action cannot be undone." } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <p class="text-gray-700 text-xl font-semibold">No rate limit policies configured</p>
          <p class="text-gray-500 text-sm mt-2 mb-6">Create your first policy to control API request rates</p>
          <%= link_to new_admin_rate_limit_policy_path, class: 'bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold px-8 py-3 rounded-xl shadow-lg transition-all duration-300 smooth-hover inline-flex items-center space-x-2' do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>Create Policy</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Policy Statistics %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Total Policies</h3>
      <p class="text-3xl font-bold text-gray-900"><%= @policies.count %></p>
    </div>

    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">APIs with Policies</h3>
      <p class="text-3xl font-bold text-gray-900">
        <%= @policies.select { |p| p.api_definition_id.present? }.map(&:api_definition_id).uniq.count %>
      </p>
    </div>

    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Most Common Strategy</h3>
      <p class="text-xl font-bold text-gray-900">
        <% strategy_counts = @policies.group_by(&:strategy).transform_values(&:count) %>
        <% if strategy_counts.any? %>
          <%= strategy_counts.max_by { |k, v| v }[0].humanize %>
        <% else %>
          N/A
        <% end %>
      </p>
    </div>
  </div>
</div>
