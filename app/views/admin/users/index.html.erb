<% content_for :page_title, 'Users - Exceptions Management' %>

<div class="max-w-7xl mx-auto">
  <%# Purpose Notice %>
  <div class="glass-card rounded-2xl shadow-xl mb-8 p-6 smooth-hover border-2 border-yellow-300">
    <div class="flex items-center">
      <div class="bg-gradient-to-br from-yellow-500 to-orange-500 rounded-2xl p-3 mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-bold text-lg text-gray-900">This is NOT user management</h3>
        <p class="text-sm text-gray-600 mt-1">Use this screen to manage exceptions (tier overrides, token rotation, abuse handling). Most users should never need admin intervention.</p>
      </div>
    </div>
  </div>

  <%# Header with Stats %>
  <div class="glass-card rounded-2xl shadow-xl mb-6 p-6 smooth-hover">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl p-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Users</h1>
          <p class="text-sm text-gray-600 mt-1">Manage exceptions, not users</p>
        </div>
      </div>
      <div class="bg-white/20 backdrop-blur-sm px-6 py-4 rounded-xl border border-gray-300">
        <p class="text-sm text-gray-600">Total Users</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:total]) %></p>
      </div>
    </div>
  </div>

  <%# Tier Filter Tabs %>
  <div class="glass-card rounded-2xl shadow-xl mb-6 p-4 smooth-hover">
    <div class="flex gap-2">
      <%= link_to 'All', admin_users_path, class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{params[:tier].blank? && params[:role].blank? ? 'bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg' : 'bg-white text-gray-700 hover:shadow-md'}" %>
      <%= link_to 'Free', admin_users_path(tier: 'free'), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{params[:tier] == 'free' ? 'bg-gradient-to-r from-gray-600 to-gray-700 text-white shadow-lg' : 'bg-white text-gray-700 hover:shadow-md'}" %>
      <%= link_to 'Pro', admin_users_path(tier: 'pro'), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{params[:tier] == 'pro' ? 'bg-gradient-to-r from-blue-600 to-cyan-600 text-white shadow-lg' : 'bg-white text-gray-700 hover:shadow-md'}" %>
      <%= link_to 'Enterprise', admin_users_path(tier: 'enterprise'), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{params[:tier] == 'enterprise' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg' : 'bg-white text-gray-700 hover:shadow-md'}" %>
      <%= link_to 'Admins', admin_users_path(role: 'admin'), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{params[:role] == 'admin' ? 'bg-gradient-to-r from-purple-600 to-pink-600 text-white shadow-lg' : 'bg-white text-gray-700 hover:shadow-md'}" %>
    </div>
  </div>

  <%# Users Cards %>
  <div class="glass-card rounded-2xl shadow-2xl smooth-hover">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6 rounded-t-2xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="bg-white/20 backdrop-blur-sm rounded-xl p-2">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">User Management</h2>
        </div>
        <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-xl border border-white/30">
          <span class="text-white font-bold text-lg"><%= @users.count %> Users</span>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @users.any? %>
        <div class="space-y-3">
          <% @users.each_with_index do |user, index| %>
            <div class="bg-white border border-gray-200 rounded-xl p-5 hover:shadow-lg transition-all duration-300 smooth-hover relative focus-within:z-50">
              <div class="grid grid-cols-12 gap-4 items-center">
                <%# Email Column %>
                <div class="col-span-3">
                  <div class="font-bold text-gray-900 text-lg"><%= user.email %></div>
                </div>

                <%# Tier Column %>
                <div class="col-span-2">
                  <%= tier_badge(user.tier) %>
                </div>

                <%# Role Column %>
                <div class="col-span-1">
                  <%= role_badge(user.role) %>
                </div>

                <%# API Keys Column %>
                <div class="col-span-2">
                  <span class="font-mono text-sm bg-gray-100 px-3 py-1.5 rounded-lg text-gray-700">
                    <%= user.api_keys.where(status: 'active').count %> active
                    <% if user.api_keys.count > user.api_keys.where(status: 'active').count %>
                      <span class="text-gray-500">/ <%= user.api_keys.count %> total</span>
                    <% end %>
                  </span>
                </div>

                <%# Last Activity Column %>
                <div class="col-span-2">
                  <div class="text-sm text-gray-600">
                    <% last_used = user.api_keys.maximum(:last_used_at) %>
                    <% if last_used %>
                      <%= admin_time_ago(last_used) %>
                    <% else %>
                      <span class="text-gray-400">Never</span>
                    <% end %>
                  </div>
                </div>

                <%# Actions Column %>
                <div class="col-span-2">
                  <div class="flex gap-2 justify-end relative">
                    <div class="dropdown dropdown-end <%= 'dropdown-top' if index >= @users.size - 2 %>">
                      <label tabindex="0" class="bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold px-4 py-2 rounded-lg shadow transition-all duration-300 cursor-pointer flex items-center">
                        Actions
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      </label>
                      <ul tabindex="0" class="dropdown-content p-2 shadow-2xl bg-white rounded-xl w-52 border border-gray-200 absolute right-0 <%= index >= @users.size - 2 ? 'bottom-full mb-2' : 'top-full mt-2' %> space-y-1" style="z-index: 9999;">
                        <li>
                          <button onclick="showTierModal('<%= user.id %>', '<%= user.email %>', '<%= user.tier %>', <%= user.api_keys.where(status: 'active').count %>)" class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-200">
                            Override Tier
                          </button>
                        </li>
                        <li>
                          <%= button_to 'Revoke All Tokens',
                              revoke_tokens_admin_user_path(user),
                              method: :post,
                              class: 'w-full text-left px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200',
                              data: { turbo_confirm: "Force #{user.email} to re-authenticate? All active sessions will be terminated immediately." } %>
                        </li>
                        <li>
                          <%= link_to 'View in Consumer Portal', consumer_dashboard_path(as: user.id), class: 'block px-4 py-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors duration-200' %>
                        </li>
                        <li class="border-t border-gray-200 mt-2 pt-2">
                          <%= link_to 'View Audit Logs', admin_audit_logs_path(user_id: user.id), class: 'block px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors duration-200' %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <p class="text-gray-700 text-xl font-semibold">No users found</p>
          <p class="text-gray-500 text-sm mt-2">Try adjusting your filters</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Tier Stats %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Free Tier Users</h3>
      <p class="text-3xl font-bold text-gray-900">
        <%= number_with_delimiter(@stats[:by_tier]['free'] || 0) %>
      </p>
    </div>

    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Pro Tier Users</h3>
      <p class="text-3xl font-bold text-blue-600">
        <%= number_with_delimiter(@stats[:by_tier]['pro'] || 0) %>
      </p>
    </div>

    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Enterprise Tier Users</h3>
      <p class="text-3xl font-bold text-green-600">
        <%= number_with_delimiter(@stats[:by_tier]['enterprise'] || 0) %>
      </p>
    </div>
  </div>
</div>

<%# TIER OVERRIDE MODAL %>
<dialog id="tier-override-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg text-orange-700 mb-4">
      Change Tier for <span id="modal-user-email"></span>?
    </h3>

    <%= form_with url: '#', method: :post, id: 'tier-override-form', class: 'space-y-4' do |f| %>
      <div class="alert alert-warning mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <p><strong>Current Tier:</strong> <span id="modal-current-tier"></span></p>
          <p class="text-sm mt-1"><strong>Active API Keys:</strong> <span id="modal-key-count"></span></p>
        </div>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-bold">New Tier *</span>
        </label>
        <%= select_tag :new_tier,
            options_for_select([
              ['Free', 'free'],
              ['Pro', 'pro'],
              ['Enterprise', 'enterprise']
            ]),
            class: 'select select-bordered w-full',
            required: true %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-bold">Reason for Override *</span>
        </label>
        <%= text_area_tag :reason,
            nil,
            class: 'textarea textarea-bordered w-full',
            placeholder: 'e.g., Customer support escalation, billing issue, special partnership',
            required: true,
            rows: 3 %>
      </div>

      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="text-sm">
          <strong>What happens:</strong>
          <ul class="list-disc ml-4 mt-1">
            <li>New rate limits apply immediately</li>
            <li>User's API keys switch to new tier's policies</li>
            <li>Change is logged in audit trail</li>
            <li>User is NOT notified automatically</li>
          </ul>
        </div>
      </div>

      <div class="modal-action">
        <button type="button" class="btn btn-ghost" onclick="document.getElementById('tier-override-modal').close()">
          Cancel
        </button>
        <%= submit_tag 'Change Tier', class: 'btn btn-warning' %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<%# JAVASCRIPT FOR TIER OVERRIDE MODAL AND DROPDOWNS %>
<script>
  function showTierModal(userId, userEmail, currentTier, keyCount) {
    // Update modal content
    document.getElementById('modal-user-email').textContent = userEmail;
    document.getElementById('modal-current-tier').textContent = currentTier.toUpperCase();
    document.getElementById('modal-key-count').textContent = keyCount;

    // Update form action
    const form = document.getElementById('tier-override-form');
    form.action = `/admin/users/${userId}/change_tier`;

    // Show modal
    document.getElementById('tier-override-modal').showModal();
  }

  // Close other dropdowns when one gets focused
  document.addEventListener('focusin', function(event) {
    if (event.target.matches('.dropdown label[tabindex="0"]')) {
      const currentDropdown = event.target.closest('.dropdown');

      // Close all OTHER dropdowns
      document.querySelectorAll('.dropdown').forEach(dropdown => {
        if (dropdown !== currentDropdown) {
          const label = dropdown.querySelector('label');
          if (label) {
            label.blur();
          }
        }
      });
    }
  });

  // Close all dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    const clickedInsideDropdown = event.target.closest('.dropdown');
    if (!clickedInsideDropdown) {
      document.querySelectorAll('.dropdown label').forEach(label => {
        label.blur();
      });
    }
  });

  // Close dropdowns when scrolling
  document.querySelector('main')?.addEventListener('scroll', function() {
    document.querySelectorAll('.dropdown label').forEach(label => {
      label.blur();
    });
  });
</script>
