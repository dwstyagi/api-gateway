<% content_for :page_title, 'Users - Exceptions Management' %>

<div class="max-w-7xl mx-auto">
  <%# Purpose Notice %>
  <div class="alert alert-warning mb-8">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span><strong>This is NOT user management.</strong> Use this screen to manage exceptions (tier overrides, token rotation, abuse handling). Most users should never need admin intervention.</span>
  </div>

  <%# Header with Stats %>
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Users</h1>
      <p class="text-sm text-gray-600 mt-1">Manage exceptions, not users</p>
    </div>
    <div class="stats shadow">
      <div class="stat place-items-center">
        <div class="stat-title">Total Users</div>
        <div class="stat-value text-2xl"><%= number_with_delimiter(@stats[:total]) %></div>
      </div>
    </div>
  </div>

  <%# Tier Filter Tabs %>
  <div class="tabs tabs-boxed mb-6">
    <%= link_to 'All', admin_users_path, class: "tab #{params[:tier].blank? ? 'tab-active' : ''}" %>
    <%= link_to 'Free', admin_users_path(tier: 'free'), class: "tab #{params[:tier] == 'free' ? 'tab-active' : ''}" %>
    <%= link_to 'Pro', admin_users_path(tier: 'pro'), class: "tab #{params[:tier] == 'pro' ? 'tab-active' : ''}" %>
    <%= link_to 'Enterprise', admin_users_path(tier: 'enterprise'), class: "tab #{params[:tier] == 'enterprise' ? 'tab-active' : ''}" %>
    <%= link_to 'Admins', admin_users_path(role: 'admin'), class: "tab #{params[:role] == 'admin' ? 'tab-active' : ''}" %>
  </div>

  <%# Users Table %>
  <div class="card bg-white shadow-xl">
    <div class="card-body">
      <% if @users.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>Email</th>
                <th>Tier</th>
                <th>Role</th>
                <th>API Keys</th>
                <th>Last Activity</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr class="hover">
                  <td class="font-medium text-gray-900"><%= user.email %></td>
                  <td>
                    <%= tier_badge(user.tier) %>
                  </td>
                  <td>
                    <%= role_badge(user.role) %>
                  </td>
                  <td>
                    <span class="font-mono text-sm">
                      <%= user.api_keys.where(status: 'active').count %> active
                      <% if user.api_keys.count > user.api_keys.where(status: 'active').count %>
                        <span class="text-gray-500">/ <%= user.api_keys.count %> total</span>
                      <% end %>
                    </span>
                  </td>
                  <td class="text-sm">
                    <% last_used = user.api_keys.maximum(:last_used_at) %>
                    <% if last_used %>
                      <%= admin_time_ago(last_used) %>
                    <% else %>
                      <span class="text-gray-400">Never</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="dropdown dropdown-end">
                      <label tabindex="0" class="btn btn-sm btn-ghost">
                        Actions
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      </label>
                      <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
                        <li>
                          <button onclick="showTierModal('<%= user.id %>', '<%= user.email %>', '<%= user.tier %>', <%= user.api_keys.where(status: 'active').count %>)">
                            Override Tier
                          </button>
                        </li>
                        <li>
                          <%= button_to 'Revoke All Tokens',
                              revoke_tokens_admin_user_path(user),
                              method: :post,
                              class: 'text-left w-full',
                              data: { turbo_confirm: "Force #{user.email} to re-authenticate? All active sessions will be terminated immediately." } %>
                        </li>
                        <li>
                          <%= link_to 'View in Consumer Portal', consumer_dashboard_path(as: user.id), class: 'text-blue-600' %>
                        </li>
                        <li class="border-t mt-2 pt-2">
                          <%= link_to 'View Audit Logs', admin_audit_logs_path(user_id: user.id), class: 'text-gray-600' %>
                        </li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <p class="text-gray-600 text-lg">No users found</p>
          <p class="text-gray-400 text-sm mt-2">Try adjusting your filters</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Tier Stats %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <div class="card bg-white shadow-xl">
      <div class="card-body">
        <h3 class="text-sm font-medium text-gray-500">Free Tier Users</h3>
        <p class="text-3xl font-bold text-gray-900">
          <%= number_with_delimiter(@stats[:by_tier]['free'] || 0) %>
        </p>
      </div>
    </div>

    <div class="card bg-white shadow-xl">
      <div class="card-body">
        <h3 class="text-sm font-medium text-gray-500">Pro Tier Users</h3>
        <p class="text-3xl font-bold text-blue-600">
          <%= number_with_delimiter(@stats[:by_tier]['pro'] || 0) %>
        </p>
      </div>
    </div>

    <div class="card bg-white shadow-xl">
      <div class="card-body">
        <h3 class="text-sm font-medium text-gray-500">Enterprise Tier Users</h3>
        <p class="text-3xl font-bold text-green-600">
          <%= number_with_delimiter(@stats[:by_tier]['enterprise'] || 0) %>
        </p>
      </div>
    </div>
  </div>
</div>

<%# TIER OVERRIDE MODAL %>
<dialog id="tier-override-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg text-orange-700 mb-4">
      Change Tier for <span id="modal-user-email"></span>?
    </h3>

    <%= form_with url: '#', method: :post, id: 'tier-override-form', class: 'space-y-4' do |f| %>
      <div class="alert alert-warning mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <p><strong>Current Tier:</strong> <span id="modal-current-tier"></span></p>
          <p class="text-sm mt-1"><strong>Active API Keys:</strong> <span id="modal-key-count"></span></p>
        </div>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-bold">New Tier *</span>
        </label>
        <%= select_tag :new_tier,
            options_for_select([
              ['Free', 'free'],
              ['Pro', 'pro'],
              ['Enterprise', 'enterprise']
            ]),
            class: 'select select-bordered w-full',
            required: true %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-bold">Reason for Override *</span>
        </label>
        <%= text_area_tag :reason,
            nil,
            class: 'textarea textarea-bordered w-full',
            placeholder: 'e.g., Customer support escalation, billing issue, special partnership',
            required: true,
            rows: 3 %>
      </div>

      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="text-sm">
          <strong>What happens:</strong>
          <ul class="list-disc ml-4 mt-1">
            <li>New rate limits apply immediately</li>
            <li>User's API keys switch to new tier's policies</li>
            <li>Change is logged in audit trail</li>
            <li>User is NOT notified automatically</li>
          </ul>
        </div>
      </div>

      <div class="modal-action">
        <button type="button" class="btn btn-ghost" onclick="document.getElementById('tier-override-modal').close()">
          Cancel
        </button>
        <%= submit_tag 'Change Tier', class: 'btn btn-warning' %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<%# JAVASCRIPT FOR TIER OVERRIDE MODAL %>
<script>
  function showTierModal(userId, userEmail, currentTier, keyCount) {
    // Update modal content
    document.getElementById('modal-user-email').textContent = userEmail;
    document.getElementById('modal-current-tier').textContent = currentTier.toUpperCase();
    document.getElementById('modal-key-count').textContent = keyCount;

    // Update form action
    const form = document.getElementById('tier-override-form');
    form.action = `/admin/users/${userId}/change_tier`;

    // Show modal
    document.getElementById('tier-override-modal').showModal();
  }
</script>
