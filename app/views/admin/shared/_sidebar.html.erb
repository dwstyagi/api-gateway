<div class="w-64 bg-gray-800 text-white min-h-screen flex flex-col">
  <%# Logo/Title %>
  <div class="p-4 border-b border-gray-700">
    <h2 class="text-xl font-bold">Admin Console</h2>
    <p class="text-xs text-gray-400 mt-1">Safety Control Panel</p>
  </div>

  <%# Navigation %>
  <nav class="flex-1 p-4">
    <ul class="space-y-2">
      <%# Overview %>
      <li>
        <%= link_to admin_overview_index_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_overview_index_path) || current_page?(admin_root_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span class="font-medium">Overview</span>
        <% end %>
      </li>

      <%# APIs %>
      <li>
        <%= link_to admin_api_definitions_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_api_definitions_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-medium">APIs</span>
        <% end %>
      </li>

      <%# Policies - MOST DANGEROUS %>
      <li>
        <%= link_to admin_rate_limit_policies_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_rate_limit_policies_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span class="font-medium">Policies</span>
          <span class="badge badge-error badge-sm ml-auto">⚠️</span>
        <% end %>
      </li>

      <%# Users %>
      <li>
        <%= link_to admin_users_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_users_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span class="font-medium">Users</span>
        <% end %>
      </li>

      <%# IP Rules - Emergency Brake %>
      <li>
        <%= link_to admin_ip_rules_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_ip_rules_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
          </svg>
          <span class="font-medium">IP Rules</span>
          <% blocked_count = IpRule.blocked.active.count %>
          <% if blocked_count > 0 %>
            <span class="badge badge-error badge-sm ml-auto"><%= blocked_count %></span>
          <% end %>
        <% end %>
      </li>

      <%# Audit Logs %>
      <li>
        <%= link_to admin_audit_logs_path, class: "flex items-center p-3 rounded hover:bg-gray-700 transition-colors #{current_page?(admin_audit_logs_path) ? 'bg-gray-700' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="font-medium">Audit Logs</span>
        <% end %>
      </li>
    </ul>
  </nav>

  <%# Footer %>
  <div class="p-4 border-t border-gray-700">
    <div class="text-xs text-gray-400 mb-2">
      <p class="font-medium mb-1">Admin:</p>
      <p class="truncate"><%= current_user.email %></p>
    </div>
    <div class="text-xs text-gray-500">
      <p>Role: <%= current_user.role.titleize %></p>
      <% if current_user.tier %>
        <p>Tier: <%= current_user.tier.titleize %></p>
      <% end %>
    </div>
  </div>
</div>
