<% content_for :page_title, 'Create API Definition' %>

<div class="max-w-4xl mx-auto">
  <%# Header %>
  <div class="glass-card rounded-2xl shadow-xl mb-6 p-6 smooth-hover">
    <div class="flex items-center space-x-4">
      <div class="bg-gradient-to-br from-indigo-500 to-purple-500 rounded-2xl p-3">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Create New API Definition</h1>
        <p class="text-sm text-gray-600 mt-1">Define a new backend service route</p>
      </div>
    </div>
  </div>

  <%# Form %>
  <div class="glass-card rounded-2xl shadow-2xl smooth-hover overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6">
      <h2 class="text-2xl font-bold text-white">API Configuration</h2>
    </div>

    <div class="p-6">
      <%= form_with model: [:admin, ApiDefinition.new], class: 'space-y-6' do |f| %>
        <%# Name Field %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-bold text-gray-700">API Name *</span>
            <span class="label-text-alt text-gray-500">Unique identifier for this API</span>
          </label>
          <%= f.text_field :name,
              class: 'input input-bordered input-lg w-full',
              placeholder: 'e.g., Users Service, Payment Gateway',
              required: true %>
        </div>

        <%# Route Pattern Field %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-bold text-gray-700">Route Pattern *</span>
            <span class="label-text-alt text-gray-500">URL pattern to match (e.g., /api/users/*)</span>
          </label>
          <%= f.text_field :route_pattern,
              class: 'input input-bordered input-lg w-full font-mono',
              placeholder: '/api/service/*',
              required: true %>
          <label class="label">
            <span class="label-text-alt text-gray-600">Use * as wildcard. Example: /api/users/* matches /api/users/123</span>
          </label>
        </div>

        <%# Backend URL Field %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-bold text-gray-700">Backend URL *</span>
            <span class="label-text-alt text-gray-500">Where to forward requests</span>
          </label>
          <%= f.text_field :backend_url,
              class: 'input input-bordered input-lg w-full font-mono',
              placeholder: 'http://backend-service:3000',
              required: true %>
          <label class="label">
            <span class="label-text-alt text-gray-600">Full URL including protocol (http:// or https://)</span>
          </label>
        </div>

        <%# Allowed Methods Field %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-bold text-gray-700">Allowed HTTP Methods *</span>
            <span class="label-text-alt text-gray-500">Select methods this API supports</span>
          </label>
          <div class="flex flex-wrap gap-3">
            <% ['GET', 'POST', 'PUT', 'PATCH', 'DELETE'].each do |method| %>
              <label class="cursor-pointer">
                <input type="checkbox"
                       name="api_definition[allowed_methods][]"
                       value="<%= method %>"
                       class="checkbox checkbox-primary mr-2"
                       <%= 'checked' if method == 'GET' %>>
                <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-bold <%= case method
                  when 'GET' then 'bg-green-100 text-green-700'
                  when 'POST' then 'bg-blue-100 text-blue-700'
                  when 'PUT' then 'bg-yellow-100 text-yellow-700'
                  when 'PATCH' then 'bg-orange-100 text-orange-700'
                  when 'DELETE' then 'bg-red-100 text-red-700'
                end %>">
                  <%= method %>
                </span>
              </label>
            <% end %>
          </div>
        </div>

        <%# Enabled Field %>
        <div class="form-control">
          <label class="cursor-pointer flex items-center space-x-3">
            <%= f.check_box :enabled, class: 'checkbox checkbox-lg checkbox-primary', checked: true %>
            <div>
              <span class="label-text font-bold text-gray-700">Enable API immediately</span>
              <p class="text-sm text-gray-500">If checked, API will start routing traffic right away</p>
            </div>
          </label>
        </div>

        <%# Info Box %>
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-500 rounded-xl p-4">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="text-sm text-blue-800">
              <p class="font-semibold mb-2">What happens next:</p>
              <ul class="list-disc ml-4 space-y-1">
                <li>API definition will be created in the gateway</li>
                <li>You'll need to create rate limit policies for each tier</li>
                <li>Traffic will route immediately if enabled</li>
                <li>All requests will be logged in audit logs</li>
              </ul>
            </div>
          </div>
        </div>

        <%# Action Buttons %>
        <div class="flex justify-between items-center pt-4 border-t border-gray-200">
          <%= link_to admin_api_definitions_path, class: 'bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-xl transition-all duration-300' do %>
            Cancel
          <% end %>
          <%= f.submit 'Create API Definition',
              class: 'bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold px-8 py-3 rounded-xl shadow-lg transition-all duration-300 smooth-hover' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
