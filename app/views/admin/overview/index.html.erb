<% content_for :page_title, 'System Overview' %>

<div class="max-w-7xl mx-auto">
  <%# READ-ONLY NOTICE %>
  <div class="glass-card rounded-2xl shadow-xl mb-8 p-6 smooth-hover border-2 border-blue-300">
    <div class="flex items-center">
      <div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-2xl p-3 mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-bold text-lg text-gray-900">READ-ONLY DASHBOARD</h3>
        <p class="text-sm text-gray-600 mt-1">Situational awareness only. No actions available on this screen.</p>
      </div>
    </div>
  </div>

  <%# 4 SIGNAL CARDS (2x2 Grid) %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <%# Gateway Status %>
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Gateway Status</h3>
      <span data-health-gateway class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-bold <%= @health[:gateway] == 'healthy' ? 'bg-green-100 text-green-700' : @health[:gateway] == 'warning' ? 'bg-yellow-100 text-yellow-700' : 'bg-red-100 text-red-700' %>">
        <%= @health[:gateway].upcase %>
      </span>

      <% if @health[:gateway] == 'critical' %>
        <p class="text-xs text-red-600 mt-2">No requests processed recently</p>
      <% elsif @health[:gateway] == 'warning' %>
        <p class="text-xs text-yellow-600 mt-2">Low traffic detected</p>
      <% else %>
        <p class="text-xs text-green-600 mt-2">Processing requests</p>
      <% end %>
    </div>

    <%# Redis Status %>
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Redis Status</h3>
      <span data-health-redis class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-bold <%= @health[:redis] == 'healthy' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
        <%= @health[:redis].upcase %>
      </span>

      <% if @health[:redis] == 'healthy' %>
        <p class="text-xs text-green-600 mt-2">Connected</p>
      <% else %>
        <p class="text-xs text-red-600 mt-2">Connection failed</p>
      <% end %>
    </div>

    <%# Error Rate (Last 5 min) %>
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Error Rate (5 min)</h3>

      <div class="flex items-baseline">
        <% error_rate = @health[:error_rate].to_f %>
        <span data-health-error-rate class="text-3xl font-bold <%= error_rate > 5 ? 'text-red-600' : error_rate > 1 ? 'text-yellow-600' : 'text-green-600' %>">
          <%= error_rate.round(1) %>%
        </span>
      </div>

      <% if error_rate > 5 %>
        <div class="flex items-center mt-2 text-red-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <span class="text-xs font-bold">CRITICAL</span>
        </div>
      <% elsif error_rate > 1 %>
        <div class="flex items-center mt-2 text-yellow-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <span class="text-xs font-bold">WARNING</span>
        </div>
      <% else %>
        <p class="text-xs text-green-600 mt-2">Normal</p>
      <% end %>
    </div>

    <%# Blocked IPs %>
    <div class="glass-card rounded-2xl shadow-xl p-6 smooth-hover">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Blocked IPs</h3>

      <div class="flex items-baseline">
        <span data-health-blocked-ips class="text-3xl font-bold <%= @health[:blocked_ips] > 0 ? 'text-red-600' : 'text-green-600' %>">
          <%= @health[:blocked_ips] %>
        </span>
      </div>

      <% if @health[:blocked_ips] > 0 %>
        <%= link_to admin_ip_rules_path, class: 'text-xs text-red-600 hover:text-red-700 mt-2 inline-flex items-center' do %>
          View IP Rules
          <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      <% else %>
        <p class="text-xs text-green-600 mt-2">No active blocks</p>
      <% end %>
    </div>
  </div>

  <%# DATABASE STATUS (Additional Signal) %>
  <div class="glass-card rounded-2xl shadow-xl mb-8 p-6 smooth-hover">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-2">Database Status</h3>
        <%= health_status_indicator(@health[:database]) %>
      </div>
      <div class="text-right">
        <p class="text-xs text-gray-500">Pool Connections</p>
        <p class="text-lg font-bold text-gray-900">
          <%= ActiveRecord::Base.connection_pool.connections.count %> / <%= ActiveRecord::Base.connection_pool.size %>
        </p>
      </div>
    </div>
  </div>

  <%# LAST 10 CRITICAL EVENTS %>
  <div class="glass-card rounded-2xl shadow-2xl smooth-hover overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="bg-white/20 backdrop-blur-sm rounded-xl p-2">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">Last 10 Critical Events</h2>
        </div>
        <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-xl border border-white/30">
          <span class="text-white font-bold text-sm">Admin & Security Events Only</span>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @critical_events.any? %>
        <div class="space-y-3">
          <% @critical_events.each do |event| %>
            <div class="bg-white border border-gray-200 rounded-xl p-5 hover:shadow-lg transition-all duration-300 smooth-hover">
              <div class="grid grid-cols-12 gap-4 items-center">
                <%# Time Column %>
                <div class="col-span-2">
                  <div class="text-sm text-gray-700">
                    <%= admin_time_ago(event.created_at) %>
                  </div>
                </div>

                <%# Event Column %>
                <div class="col-span-4">
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold <%= event.event_type.starts_with?('security.') ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                    <%= event.event_type %>
                  </span>
                </div>

                <%# Actor Column %>
                <div class="col-span-3">
                  <div class="text-sm text-gray-900 font-medium">
                    <%= event.actor&.email || 'System' %>
                  </div>
                </div>

                <%# Impact Column %>
                <div class="col-span-3">
                  <div class="text-sm text-gray-600">
                    <% if event.metadata.present? %>
                      <% if event.metadata['affected_users'] %>
                        <span class="font-medium"><%= event.metadata['affected_users'] %> users</span>
                      <% elsif event.metadata['ip_address'] %>
                        <span class="font-mono"><%= event.metadata['ip_address'] %></span>
                      <% elsif event.metadata['resource_id'] %>
                        <span class="font-mono">ID: <%= event.metadata['resource_id'] %></span>
                      <% else %>
                        <span>-</span>
                      <% end %>
                    <% else %>
                      <span>-</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-6 text-center">
          <%= link_to admin_audit_logs_path, class: 'bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold px-6 py-3 rounded-xl shadow-lg transition-all duration-300 smooth-hover inline-flex items-center' do %>
            <span>View All Audit Logs</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <p class="text-gray-700 text-xl font-semibold">No critical events yet</p>
          <p class="text-gray-500 text-sm mt-2">Admin and security events will appear here</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# AUTO-REFRESH NOTICE %>
  <div class="text-center mt-8 text-gray-500 text-sm">
    <p>Health signals auto-refresh every 10 seconds</p>
    <p class="text-xs mt-1">Last updated: <span id="last-updated"><%= Time.current.strftime('%H:%M:%S') %></span></p>
  </div>
</div>

<%# NO JAVASCRIPT FOR ACTIONS - This is READ-ONLY %>
<script>
  // Update last updated timestamp
  setInterval(() => {
    document.getElementById('last-updated').textContent = new Date().toLocaleTimeString('en-GB');
  }, 1000);
</script>
