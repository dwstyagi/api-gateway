<div id="realtime-dashboard" class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">API Gateway Dashboard</h1>
            <% if current_user %>
              <p class="mt-1 text-sm text-gray-500">
                Logged in as: <%= current_user.email %> (<%= current_user.role.titleize %>)
              </p>
            <% end %>
          </div>
          <!-- WebSocket Connection Status -->
          <div class="flex items-center space-x-2">
            <div id="ws-status-indicator" class="h-3 w-3 rounded-full bg-gray-300" title="Connecting..."></div>
            <span class="text-xs text-gray-500">Live</span>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <!-- Recent Request Badge -->
          <span id="recent-request-badge" class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
            Waiting...
          </span>
          <% if current_user %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
              <%= current_user.tier.titleize %> Tier
            </span>
            <a href="/logout" data-turbo-method="delete" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </a>
          <% else %>
            <a href="/login" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
              Login
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Users Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:users][:total] %></dd>
                <dd class="text-sm text-green-600">+<%= @stats[:users][:recent_signups] %> this week</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- API Keys Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Active API Keys</dt>
                <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:api_keys][:active] %></dd>
                <dd class="text-sm text-gray-600"><%= @stats[:api_keys][:total] %> total</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Live Requests Card -->
      <div id="requests-card" class="bg-white overflow-hidden shadow rounded-lg transition-all">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Live Throughput
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    LIVE
                  </span>
                </dt>
                <dd id="live-throughput" class="text-3xl font-semibold text-blue-600">0.00 req/s</dd>
                <dd id="live-total-requests" class="text-sm text-gray-600">0 total</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Live Errors Card -->
      <div id="errors-card" class="bg-white overflow-hidden shadow rounded-lg transition-all">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Error Rate
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    LIVE
                  </span>
                </dt>
                <dd id="live-error-rate" class="text-3xl font-semibold text-red-600">0.00%</dd>
                <dd id="live-total-errors" class="text-sm text-gray-600">0 errors</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Live Performance Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  Avg Response Time
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    LIVE
                  </span>
                </dt>
                <dd id="live-avg-response-time" class="text-3xl font-semibold text-purple-600">0.00ms</dd>
                <dd id="live-p95-response-time" class="text-sm text-gray-600">P95: 0.00ms</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- API Definitions Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">API Routes</dt>
                <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:api_definitions][:enabled] %></dd>
                <dd class="text-sm text-gray-600"><%= @stats[:api_definitions][:total] %> total</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Audit Logs Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Events Today</dt>
                <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:audit_logs][:today] %></dd>
                <dd class="text-sm text-gray-600"><%= @stats[:audit_logs][:this_week] %> this week</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 gap-5 lg:grid-cols-2 mb-8">
      <!-- User Signups Chart -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">User Signups (Last 30 Days)</h2>
        <%= line_chart @stats[:users][:signups_by_day], height: "250px", colors: ["#3B82F6"] %>
      </div>

      <!-- API Key Creation Chart -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">API Key Creation (Last 30 Days)</h2>
        <%= line_chart @stats[:api_keys][:created_by_day], height: "250px", colors: ["#10B981"] %>
      </div>

      <!-- Users by Tier Chart -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Users by Tier</h2>
        <%= pie_chart @stats[:users][:by_tier], height: "250px", donut: true, colors: ["#3B82F6", "#10B981", "#F59E0B"] %>
      </div>

      <!-- Rate Limit Strategies Chart -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Rate Limit Strategies</h2>
        <%= column_chart @stats[:rate_limit_policies][:by_strategy], height: "250px", colors: ["#8B5CF6"] %>
      </div>

      <!-- Activity Over Time Chart -->
      <div class="bg-white shadow rounded-lg p-6 lg:col-span-2">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Activity Events (Last 30 Days)</h2>
        <%= area_chart @stats[:audit_logs][:events_by_day], height: "300px", colors: ["#EF4444"] %>
      </div>

      <!-- Top Events Chart -->
      <div class="bg-white shadow rounded-lg p-6 lg:col-span-2">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Top Events (Last 7 Days)</h2>
        <%= bar_chart @stats[:audit_logs][:by_event_type], height: "300px", colors: ["#6366F1"] %>
      </div>
    </div>

    <!-- Recent Activity Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">Recent Activity</h2>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
            LIVE UPDATES
          </span>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table id="recent-activity-table" class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP Address</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_activity.each do |log| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= log.created_at.strftime('%H:%M:%S') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= log.event_type %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.actor&.email || 'System' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.actor_ip || 'N/A' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
